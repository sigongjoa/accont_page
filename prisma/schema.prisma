generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_PRISMA_URL")
}

model Expense {
  id            String    @id @default(cuid())
  date          String
  item          String
  category      String
  amount        Int
  currency      String
  paymentMethod String
  status        String
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Site {
  id           String  @id @default(cuid())
  name         String
  description  String
  isSubscribed Boolean
  usage        String
  category     String
}

model Subscription {
  id              String   @id @default(cuid())
  name            String
  amount          Int
  currency        String
  recurrence      String
  nextPaymentDate String
  category        String
  status          String
}
